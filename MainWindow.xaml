<Window x:Class="Braille.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Braille"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="inputBox" FontSize="18" TextChanged="inputBox_TextChanged"> </TextBox>
        <Canvas Grid.Row="1" Name="outputBox"> </Canvas>
    </Grid>
</Window>
